{
    "@": "all",
    "args": [
        {
            "@": "request",
            "name": "source",
            "args": [
                {"uri": "http://bgm.tv{{ path }}"}
            ]
        },
        {
            "@": "jinja2",
            "name": "xslt",
            "kargs": {
                "template": {
                    "@": "read",
                    "kargs": {
                        "name": "bgm_comments.xslt",
                        "type": "text"
                    }
                },
                "kargs": {
                    "id": "bgm.tv{{ path }}"
                }
            }
        },
        {
            "@": "xslt",
            "kargs": {
                "html": {
                    "@": "base64_decode",
                    "args": [
                        {"[]": [{"&": "source"}, "body"]}
                    ]
                },
                "xslt": {"&": "xslt"}
            }
        }
    ]
}
