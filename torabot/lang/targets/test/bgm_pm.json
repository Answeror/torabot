{
    "@all": [
        {
            "@": "json_decode",
            "name": "headers",
            "args": [
                {
                    "@jinja2": {
                        "template": { "text<": "headers.json" },
                        "kargs": { "chii_auth": "{{ chii_auth }}" }
                    }
                }
            ]
        },
        {
            "@request": [{
                "uri": "http://bgm.tv",
                "headers": { "&": "headers" }
            }]
        },
        {
            "@xslt": {
                "html": {
                    "@base64_decode": {
                        "[]": [
                            {
                                "@request": [{
                                    "uri": "http://bgm.tv/pm",
                                    "headers": { "&": "headers" }
                                }]
                            },
                            "body"
                        ]
                    }
                },
                "xslt": { "text<": "bgm_pm.xslt" }
            }
        }
    ]
}
