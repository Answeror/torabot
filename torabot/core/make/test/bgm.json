{
    "targets": [
        {
            "name": "update_cookie",
            "type": "request",
            "input": {
                "request": {
                    "uri": "http://bgm.tv",
                    "headers": "{{ target['@files'].read_json('headers.json') }}"
                }
            }
        },
        {
            "name": "set_cookie",
            "type": "set_cookie",
            "input": {
                "request": {
                    "uri": "http://bgm.tv/pm",
                    "headers": "{{ target['@files'].read_json('headers.json') }}"
                },
                "set_cookie": "{{ target.update_cookie.headers['Set-Cookie'] }}"
            }
        },
        {
            "name": "get_html",
            "type": "request",
            "input": {
                "request": "{{ target.set_cookie }}"
            }
        },
        {
            "name": "decode",
            "type": "base64_decode",
            "input": {
                "text": "{{ target.get_html.body }}"
            }
        },
        {
            "name": "transform",
            "type": "xslt",
            "input": {
                "html": "{{ target.decode }}",
                "xslt": "{{ target['@files'].read_text('bgm.xslt') }}"
            }
        }
    ],
    "files": [
        {
            "name": "bgm.xslt",
            "path": "../targets/test/bgm.xslt"
        },
        {
            "name": "headers.json",
            "path": "./headers.json"
        }
    ]
}
