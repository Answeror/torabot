{
    "targets": [
        {
            "name": "source",
            "type": "request",
            "input": {
                "request": {
                    "uri": "http://bgm.tv{{ path }}"
                }
            }
        },
        {
            "name": "xslt",
            "type": "jinja2",
            "input": {
                "template": "{{ target['@files'].read_text('bgm_comments.xslt') }}",
                "kargs": {
                    "id": "bgm.tv{{ path }}"
                }
            }
        },
        {
            "name": "transform",
            "type": "xslt",
            "input": {
                "html": {
                    "@type": "call",
                    "name": "base64_decode",
                    "args": ["{{ target.source.body }}"]
                },
                "xslt": "{{ target.xslt }}"
            }
        }
    ],
    "files": [
        {
            "name": "bgm_comments.xslt",
            "path": "../targets/test/bgm_comments.xslt"
        }
    ]
}
