{
    "@": "xslt",
    "kargs": {
        "html": {
            "@": "base64_decode",
            "arg": {
                "[]": [
                    {
                        "@": "request",
                        "arg": {"uri": "http://bgm.tv{{ path }}"}
                    },
                    "body"
                ]
            }
        },
        "xslt": {
            "@": "jinja2",
            "kargs": {
                "template": {
                    "<": {
                        "name": "bgm_comments.xslt",
                        "type": "text"
                    }
                },
                "kargs": {
                    "id": "bgm.tv{{ path }}"
                }
            }
        }
    }
}
