{
    "@xslt": {
        "html": {
            "@base64_decode": {
                "[]": [
                    {"@request": "http://bgm.tv{{ path }}"},
                    "body"
                ]
            }
        },
        "xslt": {
            "@jinja2": {
                "template": {"text<": "bgm_comments.xslt"},
                "kargs": {"id": "bgm.tv{{ path }}"}
            }
        }
    }
}
